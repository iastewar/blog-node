<!DOCTYPE html>
<html>
  <% include ../_head %>
  <body>
    <div class="container">
      <% include ../_navbar %>

      <h1>Editing <%= post.title %></h1>
      <form action='/posts/<%= post._id %>/edit' method='post'>
        <input type='hidden' value='PUT' name='_method'>
        <div class="form-group">
          <label name='title'>Title</label>
          <input type='text_field' name='title' value='<%= post.title %>' class="form-control">
        </div>
        <div class="form-group">
          <label name='body'>Body</label>
          <input type='text_area' name='body' value='<%= post.body %>' class="form-control">
        </div>

        <input type='submit' value='Update' class='btn btn-primary'>
      </form>

    <div>
  </body>
</html>
